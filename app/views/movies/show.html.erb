<% content_for :head do %>
  <base href="/">
  <%= stylesheet_link_tag 'webStyle' %>
  <link rel="stylesheet" href="/assets/static/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/static/style-min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<% end %>

<body>

    <div class="custom-container mt-5" style="padding: 0 4rem; max-width: 1800px;">
      <div class="d-flex">
        <div class="col-md-3 bg-light">
          <div id="movie-full-info">
            <div class="movie-info-poster">
              <span>
                <%= display_image(@movie, :poster) %>
              </span>
            </div>
            <div class="info-data">
              <h1 itemprop="name" class="info-title"><%= @movie.name %></h1>
              <div class="info-subtitle">
                <span class="sub-quality mini-stt">HD</span>
                <span class="sub-rating mini-stt">PG</span>
                <span class="sub-imdb mini-stt">IMDb <%= @movie.imdb %></span>
                <span class="text-white"><%= @movie.duration %> min</span>
              </div>
              <div class="description cts-wrapper">
                <div class="cts-block short" data-name="short">
                  <div><%= truncate(@movie.description, length: 300) %></div> <button
                    class="btn btn-sm btn-dark desc-btn mt-2 cts-switcher" data-target="full">view all <i
                      class="bi bi-arrow-right-short"></i></button>
                </div>
                <div class="cts-block" data-name="full" style="display:none">
                  <div><%= @movie.description %></div> <button
                    class="btn btn-sm btn-dark desc-btn mt-2 cts-switcher" data-target="short"><i
                      class="bi bi-arrow-left-short"></i> view less</button>
                </div>
              </div>
              <div class="meta">
                <div>
                  <div>Type:</div>
                  <span> <a href="movie">Movie</a> </span>
                </div>
                <div>
                  <div>Country:</div>
                  <span>
                    <%= linked_items_list(@movie.countries, ->(name) { "/country/#{name}" }) %>
                  </span>
                </div>
                <div>
                  <div>Genre:</div>
                  <span>
                    <%= linked_items_list(@movie.genres, ->(name) { "/genre/#{name}" }) %>
                  </span>
                </div>
                <div>
                  <div>Release:</div> <span itemprop="dateCreated"><%= @movie.release_year %></span>
                </div>
                <div>
                  <div>Director:</div>
                  <span>
                    <%= linked_items_list(@movie.directors, ->(name) { "/director/#{name}" }) %>
                  </span>
                </div>
                <div>
                  <div>Production:</div>
                  <span>
                    <%= linked_items_list(@movie.productions, ->(name) { "/production/#{name}" }) %>
                  </span>
                </div>
                <div>
                  <div>Cast:</div>
                  <span>
                    <%= linked_items_list(@movie.actors, ->(name) { "/actor/#{name}" }) %>
                  </span>
                </div>
              </div>
              <div class="rating-box" itemprop="aggregateRating" itemscope=""
                itemtype="https://schema.org/AggregateRating" data-id="66937" data-score="6.47"> <span class="stars">
                  <span class="active"><i class="bi bi-star-fill"></i></span> <span class="active"><i
                      class="bi bi-star-fill"></i></span> <span class="active"><i class="bi bi-star-fill"></i></span>
                  <span class="active"><i class="bi bi-star-fill"></i></span> <span class="active"><i
                      class="bi bi-star-fill"></i></span> </span>
                <div class="score live-label"> <span><b itemprop="ratingValue">6.47</b> of <b
                      itemprop="bestRating">10</b></span> <span>(<span itemprop="reviewCount"
                      style="display:none">4400</span>4,400 reviews)</span> </div>
              </div>
              <div class="sharing">
                <div
                  class="sharethis-inline-share-buttons mt-4 st-left st-has-labels  st-inline-share-buttons st-animated"
                  data-url="https://flixtor.video/movie/the-little-mermaid2-zk9wl" id="st-1">
                  <div class="st-total ">
                    <span class="st-label">20</span>
                    <span class="st-shares">
                      Shares
                    </span>
                  </div>
                  <div class="st-btn st-first st-hide-label  st-remove-label" data-network="facebook"
