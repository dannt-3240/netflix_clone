<div class="container-fluid">
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Create new movie</h1>
  </div>
  <%= form_for [:admin, @movie] do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "enter movie name here ..." %>
      </div>
      <div class="form-group col-md-2">
        <label>Duration</label>
        <%= f.number_field :duration, class: "form-control", placeholder: "Duration" %>
      </div>
      <div class="form-group col-md-2">
        <label>Release year</label>
        <%= f.text_field :release_year, class: "form-control", placeholder: "YYYY", pattern: "\\d{4}", title: "Please enter a valid year (YYYY)" %>
      </div>
      <div class="form-group col-md-2">
        <label>IMDB</label>
        <%= f.text_field :imdb, class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label>Actors</label>
        <%= f.select :actor_ids, Actor.all.pluck(:name, :id), {}, { multiple: true, class: "form-control" } %>
      </div>
      <div class="form-group col-md-4">
        <label>Genres</label>
        <%= f.select :genre_ids, Genre.all.pluck(:name, :id), {}, { multiple: true, class: "form-control" } %>
      </div>
      <div class="form-group col-md-4">
        <label>Countries</label>
        <%= f.select :country_ids, Country.all.pluck(:name, :id), {}, { multiple: true, class: "form-control" } %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Directors</label>
        <%= f.select :director_ids, Director.all.pluck(:name, :id), {}, { multiple: true, class: "form-control" } %>
      </div>
      <div class="form-group col-md-6">
        <label>Productions</label>
        <%= f.select :production_ids, Production.all.pluck(:name, :id), {}, { multiple: true, class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <label>Description</label>
      <%= f.text_area :description, class: "form-control", placeholder: "Movie description here.." %>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Upload Poster</label>
        <%= f.file_field :poster, class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <label>Upload Thumbnail</label>
        <%= f.file_field :thumbnail, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.fields_for :movie_video_attributes do |mv_form| %>
        <div class="form-group">
          <%= mv_form.label :video_url %>
          <%= mv_form.file_field :video_url, class: "form-control" %>
        </div>
      <% end %>
    </div>

    <button type="submit" class="btn btn-primary">Create Movie</button>
  <% end %>
</div>
