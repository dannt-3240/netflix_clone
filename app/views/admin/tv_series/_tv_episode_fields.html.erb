
<div class="form-row">
  <div class="form-row col-md-11">
    <div class="form-group col-md-4">
      <label>Episode Name</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group col-md-4">
      <label>Episode relase date</label>
      <%= f.date_field :release_date, class: "form-control" %>
    </div>

    <div class="form-group col-md-4">
      <label>Tv Season Number</label>
      <%= f.select :tv_seasion_order, options_for_select(tv_seasion_order_options(@tv_serie)), {}, class: "form-control", id: "tv_seasion_order_select" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.fields_for :movie_video_attributes do |mv_form| %>
        <div class="form-group">
          <%= mv_form.label :video_url %>
          <%= mv_form.file_field :video_url, class: "form-control" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to "Remove Tv ep", "#",
    class: "btn btn-danger prevent-load form-group col-md-1 m-auto remove-btn" %>
</div>
